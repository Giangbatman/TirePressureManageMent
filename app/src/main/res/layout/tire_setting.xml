<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    android:background="@color/black"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Đơn vị áp suất:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bar"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_setting"
                android:gravity="center|center_horizontal|center_vertical"
                android:padding="5dp"
                android:text="Bar"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"/>

            <TextView
                android:id="@+id/psi"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/corner_setting"
                android:gravity="center|center_horizontal|center_vertical"
                android:padding="5dp"
                android:text="PSI"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kpa"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/corner_setting"
                android:gravity="center|center_horizontal|center_vertical"
                android:padding="5dp"
                android:text="KPA"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"/>

            <TextView
                android:id="@+id/kg"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/corner_setting"
                android:gravity="center|center_horizontal|center_vertical"
                android:padding="5dp"
                android:text="KG"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"/>
        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Đơn vị nhiệt độ:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/c"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/corner_setting"
                android:gravity="center|center_horizontal|center_vertical"
                android:padding="5dp"
                android:text="℃"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"/>

            <TextView
                android:id="@+id/f"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/corner_setting"
                android:gravity="center|center_horizontal|center_vertical"
                android:padding="5dp"
                android:text="℉"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"/>
        </LinearLayout>


        <TextView
            android:id="@+id/default_setting"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/corner_setting"
            android:gravity="center|center_horizontal|center_vertical"
            android:padding="5dp"
            android:text="Cài đặt mặc định"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:clickable="true"/>

        <TextView
            android:id="@+id/bao_dong_tren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_marginTop="20dp"
            android:text="@string/bao_dong_tren"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:max="100"
            android:progressBackgroundTint="@color/orange" />

        <TextView
            android:id="@+id/bao_dong_duoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_marginTop="20dp"
            android:text="@string/bao_dong_duoi"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|center_horizontal|center_vertical"
            android:max="100"
            android:progress="50"
            android:progressBackgroundTint="@color/orange" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text=" "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>


